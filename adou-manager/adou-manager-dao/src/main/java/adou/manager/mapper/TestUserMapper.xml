	<select id="findUserByUserLikeName2" parameterType="adou.manager.pojo.TbUser" resultType="adou.manager.pojo.TbUser">
		SELECT * FROM tb_user WHERE username LIKE '%${username}%'    
		<!-- $  # 使用#号，两边加双引号， $两边不加双引号     #{}  占位符
			可替代成 "%" #{heheda}  "%" 
		-->
	</select>
	
	
	<select id="findUserByUserLikeName" parameterType="String" resultType="adou.manager.pojo.TbUser">
		SELECT * FROM tb_user WHERE username LIKE "%"#{heheda}"%"   
		 <!--  $  # 使用#号，两边加双引号， $两边不加双引号-->
	</select>
	
	
	
	
	<select id="getItemList" resultType="adou.common.pojo.SearchItem">
		SELECT 
			a.id,
			a.title,
			a.sell_point,
			a.price,
			a.image,
			b.name category_name 
		FROM 
			tb_item a 
		LEFT JOIN 
			tb_item_cat b 
		ON 
			a.cid=b.id
		WHERE a.`status`=1
	</select>
	
	<select id="getItemById" parameterType="Long" resultType="adou.common.pojo.SearchItem">
		SELECT 
			a.id,
			a.title,
			a.sell_point,
			a.price,
			a.image,
			b.name category_name 
		FROM 
			tb_item a 
		LEFT JOIN 
			tb_item_cat b 
		ON 
			a.cid=b.id
		WHERE a.`status`=1
	AND a.id=#{itemid}
	
	</select>
   
</mapper>








































